<h1> <%= @idea.title %> </h1>


<% @idea.images.each do |image| %>
<div class="item  col-xs-4 col-lg-4">
  <img src= "<%=  image.image_path %>" >
</div>
<% end %>

<p><div class="idea_description_page">

  <strong>Description:</strong>  <%= @idea.description %></p>
<%= link_to "Edit", edit_user_idea_path(@idea.user, @idea) %>
<%= link_to "Delete", user_idea_path(@idea.user, @idea), method: :delete %>
</div>

<br><br>

<%= link_to "<< Back to your dashboard <<", user_path(@idea.user) %>
