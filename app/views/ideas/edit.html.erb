<h3>Edit your idea</h3>

<%= form_for [@idea.user, @idea] do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :description %>
<%= f.text_area :description %>

<%= f.label :category_id %>
<%= f.collection_select :category_id, Category.all, :id, :name, include_blank: true, required: true %>

<%= f.collection_check_boxes :image_ids, Image.all, :id, :name do |b| %>
    <%= b.check_box %>
    <%= b.label %>
  <% end %>

<%= f.submit %>
<% end %>
