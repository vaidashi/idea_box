<h3>Create a new idea</h3>

<%= form_for [@user, @idea] do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :description %>
<%= f.text_area :description %>

<%= f.label :category_id %>
<%= f.collection_select :category_id, @categories, :id, :name, include_blank: true, required: true %>

<%= f.submit %>
<% end %>
